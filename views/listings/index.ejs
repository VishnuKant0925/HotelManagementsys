<% layout("/layouts/boilerplate") %>
<body>
  <!-- <h3>All listings</h3> -->
  <!-- <form method="get" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->

  <style>
    #filters {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    }
    .filter {
      text-align: center;
      margin-right: 2rem;
      margin-top: 1rem;
      opacity: 0.7;
    }
    .filter:hover {
      opacity: 1;
      cursor: pointer;
    }
    .filter p {
      font-size: 0.8rem;
    }
    .tax-info {
      display: none;
    }
    .tax-toggle {
      border: 1px solid black;
      border-radius: 1rem;
      height: 3.2 rem;
      padding: 1rem;
      margin-left: 2rem;
      display: flex;
      align-items: center;
    }

    .search-suggestions {
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      border-radius: 15px;
      padding: 2rem;
      margin-bottom: 2rem;
      border: 1px solid #dee2e6;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      position: relative;
      overflow: hidden;
    }

    .search-suggestions::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, #fe424d, #ff6b6b, #4ecdc4, #45b7d1);
    }

    .search-suggestions h5 {
      color: #2c3e50;
      font-weight: 600;
      margin-bottom: 0.5rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .search-suggestions p {
      color: #6c757d;
      margin-bottom: 1.5rem;
      font-size: 1rem;
    }

    .search-tags-container {
      display: flex;
      flex-wrap: wrap;
      gap: 0.8rem;
      justify-content: center;
    }

    .search-tag {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      background: linear-gradient(135deg, #fe424d, #ff6b6b);
      color: white;
      padding: 0.7rem 1.2rem;
      border-radius: 25px;
      text-decoration: none;
      font-size: 0.95rem;
      font-weight: 500;
      transition: all 0.3s ease;
      border: 2px solid transparent;
      box-shadow: 0 2px 10px rgba(254, 66, 77, 0.3);
    }

    .search-tag:hover {
      background: linear-gradient(135deg, #e03e47, #e55555);
      color: white;
      text-decoration: none;
      transform: translateY(-3px) scale(1.05);
      box-shadow: 0 6px 20px rgba(254, 66, 77, 0.4);
    }

    .search-tag i {
      font-size: 1.1rem;
    }

    /* Individual tag colors */
    .search-tag.beach {
      background: linear-gradient(135deg, #4ecdc4, #44a08d);
      box-shadow: 0 2px 10px rgba(78, 205, 196, 0.3);
    }
    .search-tag.mountain {
      background: linear-gradient(135deg, #8b5a3c, #a0724b);
      box-shadow: 0 2px 10px rgba(139, 90, 60, 0.3);
    }
    .search-tag.villa {
      background: linear-gradient(135deg, #667eea, #764ba2);
      box-shadow: 0 2px 10px rgba(102, 126, 234, 0.3);
    }
    .search-tag.cottage {
      background: linear-gradient(135deg, #ff9a9e, #fecfef);
      box-shadow: 0 2px 10px rgba(255, 154, 158, 0.3);
    }
    .search-tag.usa {
      background: linear-gradient(135deg, #ff416c, #ff4b2b);
      box-shadow: 0 2px 10px rgba(255, 65, 108, 0.3);
    }
    .search-tag.switzerland {
      background: linear-gradient(135deg, #ff0844, #ffb199);
      box-shadow: 0 2px 10px rgba(255, 8, 68, 0.3);
    }
    .search-tag.maldives {
      background: linear-gradient(135deg, #00c6ff, #0072ff);
      box-shadow: 0 2px 10px rgba(0, 198, 255, 0.3);
    }
    .search-tag.tokyo {
      background: linear-gradient(135deg, #ff6b6b, #ee5a24);
      box-shadow: 0 2px 10px rgba(255, 107, 107, 0.3);
    }
    .search-tag.luxury {
      background: linear-gradient(135deg, #ffd700, #ffed4e);
      color: #2c3e50;
      box-shadow: 0 2px 10px rgba(255, 215, 0, 0.3);
    }
    .search-tag.cabin {
      background: linear-gradient(135deg, #8b4513, #d2691e);
      box-shadow: 0 2px 10px rgba(139, 69, 19, 0.3);
    }

    .search-tag.beach:hover {
      background: linear-gradient(135deg, #3cb8b1, #3a927f);
    }
    .search-tag.mountain:hover {
      background: linear-gradient(135deg, #7a4f35, #8f6340);
    }
    .search-tag.villa:hover {
      background: linear-gradient(135deg, #5a6fd8, #6b4290);
    }
    .search-tag.cottage:hover {
      background: linear-gradient(135deg, #ff8a8e, #feb2ef);
    }
    .search-tag.usa:hover {
      background: linear-gradient(135deg, #ff3a5c, #ff3f1f);
    }
    .search-tag.switzerland:hover {
      background: linear-gradient(135deg, #e6073c, #ff9f88);
    }
    .search-tag.maldives:hover {
      background: linear-gradient(135deg, #00b3e6, #0066e6);
    }
    .search-tag.tokyo:hover {
      background: linear-gradient(135deg, #ff5757, #d63031);
    }
    .search-tag.luxury:hover {
      background: linear-gradient(135deg, #e6c200, #e6d539);
    }
    .search-tag.cabin:hover {
      background: linear-gradient(135deg, #7a3d10, #c2571a);
    }
  </style>

  <!-- Search Suggestions -->
  <div class="search-suggestions">
    <h5>
      <i class="fa-solid fa-sparkles" style="color: #fe424d"></i> Quick Search
      Suggestions
    </h5>
    <p>Discover amazing destinations and property types with just one click!</p>

    <div class="search-tags-container">
      <a href="/listings/search?q=beach" class="search-tag beach">
        <i class="fa-solid fa-umbrella-beach"></i>
        Beach
      </a>
      <a href="/listings/search?q=mountain" class="search-tag mountain">
        <i class="fa-solid fa-mountain"></i>
        Mountain
      </a>
      <a href="/listings/search?q=villa" class="search-tag villa">
        <i class="fa-solid fa-building-columns"></i>
        Villa
      </a>
      <a href="/listings/search?q=cottage" class="search-tag cottage">
        <i class="fa-solid fa-house"></i>
        Cottage
      </a>
      <a href="/listings/search?q=United States" class="search-tag usa">
        <i class="fa-solid fa-flag-usa"></i>
        United States
      </a>
      <a href="/listings/search?q=Switzerland" class="search-tag switzerland">
        <i class="fa-solid fa-mountain-sun"></i>
        Switzerland
      </a>
      <a href="/listings/search?q=Maldives" class="search-tag maldives">
        <i class="fa-solid fa-water"></i>
        Maldives
      </a>
      <a href="/listings/search?q=Tokyo" class="search-tag tokyo">
        <i class="fa-solid fa-torii-gate"></i>
        Tokyo
      </a>
      <a href="/listings/search?q=luxury" class="search-tag luxury">
        <i class="fa-solid fa-crown"></i>
        Luxury
      </a>
      <a href="/listings/search?q=cabin" class="search-tag cabin">
        <i class="fa-solid fa-tree"></i>
        Cabin
      </a>
    </div>
  </div>
  <div id="filters">
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic Cities</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-sun"></i></div>
      <p>Mountains</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-chess-rook"></i></div>
      <p>Castles</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-tractor"></i></div>
      <p>farms</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-landmark-dome"></i></div>
      <p>Domes</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-ship"></i></div>
      <p>Boats</p>
    </div>

    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="switchCheckDefault"
        />
        <label class="form-check-label" for="switchCheckDefault"
          >Display Total After Tax</label
        >
      </div>
    </div>
  </div>

  <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 mt-3">
    <% for(let listing of allListings) { %>
    <a href="/listings/<%=listing._id %>" class="listing-link">
      <div class="card col listing-card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b> <%= listing.title %> </b>
            <br />
            &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") :
            "Price not available" %> / night
            <i class="tax-info"> &nbsp;&nbsp; +18% GST</i>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>

  <!-- <ul>
        <% for(let listing of allListings) {  %>
          
            <li>
                <a href="/listings/<%= listing._id %>"><%= listing.title %> </a>
            </li>


      <%  }  %>
    </ul> -->

  <script>
    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click", () => {
      let taxInfo = document.getElementsByClassName("tax-info");
      console.log(taxInfo);
      for (info of taxInfo) {
        if (info.style.display != "inline") {
          info.style.display = "inline";
        } else {
          info.style.display = "none";
        }
      }
    });
  </script>
</body>
